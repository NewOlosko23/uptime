{
  "name": "avodal-uptime-server",
  "version": "1.0.0",
  "description": "Backend API for Avodal Uptime monitoring service",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed:checks": "node src/scripts/seedCheckData.js",
    "seed:checks:clean": "node src/scripts/seedCheckData.js --cleanup",
    "admin:list": "node src/scripts/adminManagement.js list",
    "admin:promote": "node src/scripts/adminManagement.js promote",
    "admin:demote": "node src/scripts/adminManagement.js demote",
    "admin:activate": "node src/scripts/adminManagement.js activate",
    "admin:deactivate": "node src/scripts/adminManagement.js deactivate",
    "admin:help": "node src/scripts/adminManagement.js help"
  },
  "keywords": ["uptime", "monitoring", "api", "mern"],
  "author": "Avodal",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "resend": "^2.1.0",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}